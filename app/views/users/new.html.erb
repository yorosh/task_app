<h2>予定新規作成</h2>


<% @user.errors.full_messages.each do |msg| %>
  <div class="alert alert-danger">
    <%= msg %>
  </div>
<% end %>


<%= form_for @user do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"名前" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start_date,"開始日" %></th>
            <td><%= f.date_field :start_date, class: "form-control" %></td>
        </tr>
        <tr>
            <th><%= f.label :last_date,"終了日" %></th>
            <td><%= f.date_field :last_date, class: "form-control" %></td>
        </tr>
         <tr>
          <th><%= f.label :all_day ,"終日" %></th>
          <td><%= f.check_box :all_day, {}, true, false %></td>
        </tr>
        <tr>
          <th><%= f.label :memo ,"メモ" %></th>
          <td><%= f.text_area :memo %></td>
        </tr>
    </table>
    <div>
        <ul>
          
            <li><%= f.submit "登録完了する"%></li>
            <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
        </ul>
    </div>
    <div class="date">
     <p>現在の日時 :<%= now = Time.current.to_s(:datetime_jp) %> </p>
    </div>
<% end %>