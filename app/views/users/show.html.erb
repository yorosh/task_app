<h2>予定詳細</h2>

<table>
    <tr>
        <th>名前</th>
        <td><%= @user.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @user.start_date %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @user.last_date %></td>
    </tr>
    <tr>
      <th>終日</th>
        <% if @user.all_day == true %>
          <td> ○  </td>
        <% else @user.all_day == false %>
          <td>　</td>
        <% end %>
    </tr>
    <tr>
        <th>メモ</th>
        <td><%= @user.memo %></td>
    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
    </ul>
</div>

<div class="date">
     <p>現在の日時 :<%= now = Time.current.to_s(:datetime_jp) %> </p>
</div>